          <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="lblName" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="ordinaryText" stylesheets="@../styles/texto.css" text="Nombre:" />
            <Label fx:id="lblCity" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="ordinaryText" stylesheets="@../styles/texto.css" text="Ciudad:" GridPane.rowIndex="1" />
            <Label fx:id="lblDescription" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="ordinaryText" stylesheets="@../styles/texto.css" text="Descripcion:" GridPane.rowIndex="2" />
            <Label fx:id="lblWeather" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="ordinaryText" stylesheets="@../styles/texto.css" text="Clima:" GridPane.rowIndex="3" />
            <Label fx:id="txtName" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="descriptionText" stylesheets="@../styles/texto.css" text="Label" GridPane.columnIndex="1" />
            <Label fx:id="txtCity" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="descriptionText" stylesheets="@../styles/texto.css" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="txtDescription" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="descriptionText" stylesheets="@../styles/texto.css" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="txtWeather" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="descriptionText" stylesheets="@../styles/texto.css" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
