            </Button>
            <ImageView fx:id="imgDestino" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../imagenes/impidimp.png" />
               </image>
            </ImageView>
            <Button fx:id="btnNext" mnemonicParsing="false" onAction="#nextEvent" styleClass="arrowButton" stylesheets="@../styles/boton.css">
               <graphic>
                  <SVGPath content="M21.71,11.29l-7-7a1,1,0,0,0-1.42,1.42L18.59,11H3a1,1,0,0,0,0,2H18.59l-5.3,5.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l7-7A1,1,0,0,0,21.71,11.29Z" styleClass="svg-path" />
