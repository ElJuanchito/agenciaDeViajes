<VBox fx:id="mainPane" alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" styleClass="placePane" stylesheets="@../styles/paneStyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.agenciaViajes.controllers.DestinoController">
