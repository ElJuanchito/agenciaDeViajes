<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

  <persistence-unit name="aplicacion">
  	
  	<class>co.edu.uniquindio.agenciaserver.model.Administrador</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Cliente</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Comentario</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Destino</class>
  	<class>co.edu.uniquindio.agenciaserver.model.GuiaTuristico</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Imagen</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Paquete</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Preferencia</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Reserva</class>
  	<class>co.edu.uniquindio.agenciaserver.model.Usuario</class>
  	
    <properties>
        <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
        <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:testdb"/>
        <property name="javax.persistence.jdbc.user" value="sa" />
        <property name="javax.persistence.jdbc.password" value="" />
        
        <property name="hibernate.hbm2ddl.auto" value="update" />
		<property name="hibernate.show_sql" value="true" />
		<property name="hibernate.format_sql" value="true" />
		<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
    </properties>
  </persistence-unit>

</persistence>